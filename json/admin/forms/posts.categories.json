{
    "name": {
        "type": "text",
        "label": "Tên danh mục",
        "placeholder": "Nhập tên danh mục"
    },
    "parent_id": {
        "type": "crazyselect",
        "label": "Danh mục cha",
        "template": "crazyselect",
        "call": "App\\Repositories\\Posts\\CategoryRepository::getParentSelectOptions",
        "params": [4],
        "option_label_type":"value"
    },
    "featured_image": {
        "type": "media",
        "label": "Hình xem trước",
        "@filetype": "image/*"
        
    },
    "keywords": {
        "type": "text",
        "label": "Từ khóa",
        "placeholder": "Nhập từ khóa"
    },
    "description": {
        "type": "textarea",
        "label": "Mô tả",
        "placeholder": "Nhập mô tả",
        "style": {
            "height": "290px"
        }
    }
}