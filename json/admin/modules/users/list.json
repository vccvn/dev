{
    "name": "Người dùng",
    "package": "users",
    "use_trash": true,
    "titles": {
        "default": "Danh sách người dùng",
        "trash": "Danh sách người dùng đã xóa"
    },
    "data": {
        "types": {
            "user": "Người dùng phổ thông",
            "customer": "Khách hàng",
            "shopowner": "Chủ web / shop",
            "admin": "Người quản trị hệ thông"
        },
        "status_list": {
            "1": "Kích hoạt",
            "0": "Chờ xác minh",
            "-1": "Bị khóa"
        },
        "levels": {
            "0": ""
        }
    },
    "filter": {
        "general_columns": {
            "name": "Họ Tên",
            "email": "Email"
        },
        "search_columns": {
            "username": "Username"
        },
        "sort_columns": {
            "birthday": "Sinh nhật",
            "created_at": "Thời gian khổi tạo"
        }
    },
    "table": {
        "class": "",
        "columns": [
            {
                "type": "order",
                "title": "STT",
                "class": "id-col",
                "order": 1
            },
            {
                "title": "Avatar",
                "class": "max-100",
                "template": "<a href=\"{@route}\"><img src=\"{@getAvatar}\" class=\"image-thumbnail\" alt=\"{name}\"></a>",
                "data": {
                    "@route": [
                        ".update",
                        {
                            "id": ":id"
                        }
                    ],
                    "@getAvatar": []
                }
            },
            {
                "title": "Họ tên",
                "class": "min-120 max-200",
                "template": "<a href=\"{@route}\">{name}</a>",
                    "data": {
                        "@route": [
                            ".update",
                            {
                                "id": ":id"
                            }
                        ]
                    }
            },
            {
                "title": "Email",
                "class": "min-150",
                "text": ":email"
            },
            {
                "title": "Username",
                "class": "min-100 max-200",
                "text": ":username"
            },
            {
                "title": "Số ĐT",
                "class": "min-120 text-center",
                "text": ":phone_number"
            },
            {
                "title": "Trạng thái",
                "class": "min-100",
                "data_access": "status_list.{status}"
            }
        ]
    },
    "resources": {
        "js_data": [],
        "js": [],
        "css": []
    }
}