{
    "name": "Home: CAm kết đầu ra",
    "inputs": {
        "title": {
            "type": "text",
            "label": "Tiêu đề (tùy chọn)",
            "placeholder": "Viết gì đó..."
        },
        "content": {
            "type": "textarea",
            "label": "Nội dung (Tùy chọn)",
            "id": "policy-content",
            "placeholder": "Viết gì đó",
            "class": "text-editor",
            "height": 300
        },
        
        "show_button": {
            "type": "switch",
            "label": "Hiển thị nút xem thêm",
            "check_label": "Có"
        },
        "page_id": {
            "type": "crazyselect",
            "label": "Trang chi tiết",
            "call": "get_page_options",
            "@label-type": "value"
        },

        "link": {
            "type": "text",
            "label": "Liên kết (tùy chọn)",
            "placeholder": "Nhập liên kết. (Không bắt buộc)"
        },
        "button_text": {
            "type": "text",
            "label": "Text hiển thị <br><small>(nút xem thêm)</small>",
            "placeholder": "Ví dụ: Xem chi tiết"
        },
        
        "form_title": {
            "type": "text",
            "label": "Tiêu đề Form liên hệ",
            "value": "Đăng ký nhận tư vấn"
        },
        "form_description": {
            "type": "textarea",
            "label": "Mô rả / Giới thiệu",
            "placeholder": "Viết gì đó"
        },
        "form_subject": {
            "type": "text",
            "label": "Subject <br /><small>Tiêu đề gửi form để phân biệt form dùng cho mục dích gì</small>",
            "value": "Đăng ký nhận tư vấn"
        },
        
        "form_button_text": {
            "type": "text",
            "label": "Text hiển thị <br><small>(nút Đăng ký tư vấn)</small>",
            "placeholder": "Ví dụ: Đăng ký tư vấn"
        }

    }
}